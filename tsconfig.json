{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/view/components/*"],
      "@context/*": ["src/view/context/*"],
      "@hooks/*": ["src/view/hooks/*"],
      "@services/*": ["src/view/services/*"],
      "@utils/*": ["src/view/utils/*"],
      "@assets/*": ["src/view/assets/*"],
      "@constants/*": ["src/view/constants/*"],
      "@providers/*": ["src/view/providers/*"],
      "@styles/*": ["src/view/styles/*"],
      "@pages/*": ["src/view/pages/*"],

      "@model/*": ["src/models/*"]
    }
  },
  "include": ["next-env.d.ts", "src", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
